<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="far fa-calendar-alt"></i>
        </h2>
        <h1><%= @place[:title] %></h1>
        <p><%= @place[:description] %></p>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/places/<%= @place[:id] %>/comments/new" class="btn btn-primary">comment now!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to comment</a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>Where?</h3>
        <p><%= @place[:location] %></p>
        <h3>Map</h3>
        <iframe
            width="300"
            height="250"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= @lat_long %>&zoom=12" allowfullscreen>
        </iframe>
    </div>
</div>